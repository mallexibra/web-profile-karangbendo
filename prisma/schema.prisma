generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  phone    String
  role     Role      @default(admin)
  password String
  verified DateTime?
  position Position?
  Shop     Shop[]
}

enum Role {
  village_head
  employee
  admin
  umkm
}

enum Position {
  village_head
  employee
}

model VillageProfile {
  id       Int    @id @default(autoincrement())
  visi     String
  misi     String
  image    String
  resident BigInt
  children BigInt
  mature   BigInt
  old      BigInt
}

model VillageApparatus {
  id       Int    @id @default(autoincrement())
  name     String
  position String
  profile  String
}

model VillageInfrastruktur {
  id    Int    @id @default(autoincrement())
  name  String
  image String
}

model CommunityActivities {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  time        DateTime
  image       String
}

model PublicComplaints {
  id                 Int             @id @default(autoincrement())
  name               String
  complaint          TypeOfComplaint
  email              String?
  phone              String?
  supportingEvidence String
}

enum TypeOfComplaint {
  fasilitas_umum
}

model VillageGovernmentFinance {
  id     Int           @id @default(autoincrement())
  name   String
  type   TypeOfFinance
  amount BigInt
}

enum TypeOfFinance {
  income
  expenditure
}

model DocumentationActivities {
  id    Int    @id @default(autoincrement())
  name  String
  image String
}

model WorkPlanAndBudget {
  id          Int      @id @default(autoincrement())
  name        String
  budget      BigInt
  description String
  date        DateTime
}

model LegalProduct {
  id          Int         @id @default(autoincrement())
  title       String
  number      String
  description String
  type        TypeOfLegal
}

enum TypeOfLegal {
  village_regulation
  village_head_regulation
  village_head_decision
}

model Shop {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  identity    String
  owner       User      @relation(fields: [userId], references: [id])
  userId      Int
  location    String
  phone       String
  Product     Product[]
}

model Product {
  id          Int    @id @default(autoincrement())
  image       String
  name        String
  description String
  price       BigInt
  shop        Shop   @relation(fields: [shopId], references: [id])
  shopId      Int
}
